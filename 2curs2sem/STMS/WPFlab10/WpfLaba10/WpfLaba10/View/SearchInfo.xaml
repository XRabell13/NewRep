<UserControl x:Class="WpfLaba10.View.SearchInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfLaba10.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
          
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Text="Поиск самолета по производителю и типу"/>
            <TextBlock Text="Производитель"/>
            
            <ComboBox ></ComboBox>
            <TextBlock Text="Тип"/>
            <ComboBox ></ComboBox>
            <Button Content="Поиск"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Поиск производителя"/>
            <TextBlock Text="Название производителя"/>
            <TextBox />
            <Button Content="Поиск"/>
        </StackPanel>
    </Grid>
</UserControl>
