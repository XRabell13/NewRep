<Window x:Class="Wpf67.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf67"
        mc:Ignorable="d"
        Title="{DynamicResource admin_title}" Height="450" Width="800" FontSize="14" MinHeight="450" MinWidth="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="20 8 20 8" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="Height" Value="30" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Background="WhiteSmoke">
            <Button Content="{DynamicResource admin_load}" />
            <Button Content="{DynamicResource admin_add}"/>
        </StackPanel>
        
        <TabControl Grid.Row="0" Grid.Column="1">
            <TabItem Header="{DynamicResource admin_users}" >
                <DataGrid x:Name="dg_users" AutoGenerateColumns="False" 
                          >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="id" Binding="{Binding id}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="login" Binding="{Binding nick, Mode=TwoWay}"/>
                        <DataGridTextColumn Header="password" Binding="{Binding password, Mode=TwoWay}"/>
                        <DataGridTextColumn Header="isAdmin" Binding="{Binding isAdmin, Mode=TwoWay}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="{DynamicResource admin_info_users}" >
                <DataGrid x:Name="dg_forum_answers" AutoGenerateColumns="False" 
                          >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="id" Binding="{Binding id}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="№passport" Binding="{Binding id_author}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="email" Binding="{Binding id_topic, Mode=TwoWay}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="telephone" Binding="{Binding date_create, Mode=TwoWay}" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="{DynamicResource admin_transporters}">
                <DataGrid x:Name="dg_users_info" AutoGenerateColumns="False" 
                         >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding id}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="name" Binding="{Binding name, Mode=TwoWay}"/>
                        <DataGridTextColumn Header="telephone" Binding="{Binding telephone, Mode=TwoWay}"/>
                        <DataGridTextColumn Header="email" Binding="{Binding email, Mode=TwoWay}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="{DynamicResource admin_bus}" >
                <DataGrid x:Name="dg_users_log" AutoGenerateColumns="False" >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="id bus" Binding="{Binding id}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="id transporter" Binding="{Binding log, Mode=TwoWay}"/>
                        <DataGridTextColumn Header="model" Binding="{Binding telephone, Mode=TwoWay}"/>
                        <DataGridTextColumn Header="count seat" Binding="{Binding email, Mode=TwoWay}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="{DynamicResource admin_cities}" >
                <DataGrid x:Name="dg_auctions" AutoGenerateColumns="False" 
                          >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="id" Binding="{Binding id}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="name city" Binding="{Binding dt_start, Mode=TwoWay}" IsReadOnly="True"/>
                    </DataGrid.Columns>
                    
                </DataGrid>
            </TabItem>
            
            <TabItem Header="{DynamicResource admin_intermediate_point}" >
                <DataGrid x:Name="dg_cars" AutoGenerateColumns="False" 
                          >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="id ipoint" Binding="{Binding id}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="id city" Binding="{Binding type, Mode=TwoWay}" />
                        <DataGridTextColumn Header="id route" Binding="{Binding brend, Mode=TwoWay}" />
                        <DataGridTextColumn Header="time" Binding="{Binding model, Mode=TwoWay}"/>
                        <DataGridTextColumn Header="cost" Binding="{Binding year}"/>
                    </DataGrid.Columns>
                </DataGrid>
                
            </TabItem>
            <TabItem Header="{DynamicResource admin_route_bus}" >
                <DataGrid x:Name="dg_forum_section" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="id" Binding="{Binding id}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="name route" Binding="{Binding name, Mode=TwoWay}" />
                        <DataGridTextColumn Header="id bus" Binding="{Binding color, Mode=TwoWay}" />
                        <DataGridTextColumn Header="time departure" Binding="{Binding name, Mode=TwoWay}"/>
                        <DataGridTextColumn Header="timetable" Binding="{Binding date_create}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="id end city" Binding="{Binding context, Mode=TwoWay}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="{DynamicResource admin_tickets}" >
                <DataGrid x:Name="dg_forum_topics" AutoGenerateColumns="False" 
                         >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="id ticket" Binding="{Binding id}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="id route" Binding="{Binding id_author, Mode=TwoWay}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="date departure" Binding="{Binding id_section, Mode=TwoWay}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="number seat" Binding="{Binding name, Mode=TwoWay}"/>
                        <DataGridTextColumn Header="status seat" Binding="{Binding date_create}" IsReadOnly="True"/>
                        
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="{DynamicResource admin_del}" Background="LightCoral">
                <ScrollViewer>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition />
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock FontSize="16" Text="{DynamicResource admin_del_bus}"/>
                        <ComboBox x:Name="cb_auctions"  Grid.Column="1"></ComboBox>
                        <Button Content="{DynamicResource admin_del_}" Grid.Column="2" />

                        <TextBlock FontSize="16" Grid.Row="1" Text="{DynamicResource admin_del_cities}"/>
                        <ComboBox x:Name="cb_cars" Grid.Column="1" Grid.Row="1"></ComboBox>
                        <Button Content="{DynamicResource admin_del_}" Grid.Column="2" Grid.Row="1"/>

                        <TextBlock FontSize="16" Grid.Row="2" Text="{DynamicResource admin_del_intermediate_point}"/>
                        <ComboBox x:Name="cb_forum_topics" Grid.Column="1" Grid.Row="2"></ComboBox>
                        <Button Content="{DynamicResource admin_del_}" Grid.Column="2" Grid.Row="2" />

                        <TextBlock FontSize="16" Grid.Row="3" Text="{DynamicResource admin_del_route_bus}"/>
                        <ComboBox x:Name="cb_route_bus" Grid.Column="1" Grid.Row="3"></ComboBox>
                        <Button Content="{DynamicResource admin_del_}" Grid.Column="2" Grid.Row="3" />

                        <TextBlock FontSize="16" Grid.Row="4" Text="{DynamicResource admin_del_transporters}"/>
                        <ComboBox x:Name="cb_transporters" Grid.Column="1" Grid.Row="4"></ComboBox>
                        <Button Content="{DynamicResource admin_del_}" Grid.Column="2" Grid.Row="4"/>

                        <TextBlock FontSize="16" Grid.Row="5" Text="{DynamicResource admin_del_user}"/>
                        <ComboBox x:Name="cb_rout_bus" Grid.Column="1" Grid.Row="5"></ComboBox>
                        <Button Content="{DynamicResource admin_del_}" Grid.Column="2" Grid.Row="5" />

                        <TextBlock FontSize="16" Grid.Row="6" Text="{DynamicResource admin_info_users}"/>
                        <ComboBox x:Name="cb_rut_bus" Grid.Column="1" Grid.Row="6"></ComboBox>
                        <Button Content="{DynamicResource admin_del_}" Grid.Column="2" Grid.Row="6" />
                        <!--
                    <TextBlock FontSize="16" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Center" Margin="10">Select user</TextBlock>
                    <ComboBox x:Name="cb_users" Grid.Column="2" Grid.Row="3" Margin="0,10,0,10"/>

                    <TextBlock FontSize="16" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Center">Topic</TextBlock>
                    <ComboBox x:Name="cb_user_topic" Grid.Column="1" Grid.Row="4"/>
                    <Button Content="Delete forum answers" Grid.Column="2" Grid.Row="4" Click="But_del_user_answers"/>
-->
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
