<UserControl x:Class="Wpf67.View.ChoiseSeat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf67.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox Style="{DynamicResource ListBoxСhoiseSeat}" ItemsSource="{Binding ListButtons}" SelectedValue="{Binding SelectLitButton}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding NumberSeat}" IsEnabled="{Binding StatusSeat}"></Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
