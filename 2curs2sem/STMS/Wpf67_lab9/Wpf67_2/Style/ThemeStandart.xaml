<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Wpf67.Resources">

    <Style TargetType="ListBox">
        <Setter Property="Background" Value="WhiteSmoke"/>
    </Style>
    
    <Style TargetType="Canvas">
        <Setter Property="Background" Value="LightGray"/>
    </Style>
    <Style TargetType="TabItem">
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <Style x:Key="Line" TargetType="TextBlock">
        <Setter Property="Background" Value="DarkSlateGray"/>
    </Style>
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="#827397"/>
    </Style>
    <Style x:Key="TextColor" TargetType="TextBlock">
        <Setter Property="Control.FontSize" Value="22" />
        <Setter Property="Control.VerticalAlignment" Value="Center" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="Control.Width" Value="Auto" />
        <Setter Property="Foreground" Value="Black"></Setter>
    </Style>
    <SolidColorBrush x:Key="ForegroundText" Color="White" />
    <SolidColorBrush x:Key="ForegroundText1" Color="Black" />
    
    <Style x:Key="ButTheme" TargetType="Button">
        <Setter Property="Control.FontSize" Value="16" />
        <Setter Property="Foreground" Value="NavajoWhite"></Setter>
        <Setter Property="Background" Value="DimGray"></Setter>
    </Style>
</ResourceDictionary>